<h1>Editing laptop</h1>

<%= form_for :laptop, url: laptop_path(@laptop), method: :patch do |f| %>

  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :brand %><br>
    <%= f.text_area :brand %>
  </p>

  <p>
    <%= f.label :model %><br>
    <%= f.text_area :model %>
  </p>

  <p>
    <%= f.label :processor %><br>
    <%= f.text_area :processor %>
  </p>

  <p>
    <%= f.label :ram %><br>
    <%= f.number_field :ram %>
  </p>

  <p>
    <%= f.label :price %><br>
    <%= f.number_field :price %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>


<p>
  <%= link_to 'Back', laptops_path %>
</p>